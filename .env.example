# Server Configuration
PORT=3000
NODE_ENV=development

# MySQL Configuration (PIM/Products and User Logs)
MYSQL_HOST=localhost
MYSQL_USER=your_mysql_user
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=your_database_name
MYSQL_PORT=3306

# Oracle Configuration (ERP/Sales - Optional)
ORACLE_HOST=localhost
ORACLE_USER=your_oracle_user
ORACLE_PASSWORD=your_oracle_password
ORACLE_DATABASE=your_oracle_database
ORACLE_PORT=1521

# Legacy PIM Configuration (for backward compatibility)
PIM_DB_HOST=localhost
PIM_DB_USER=your_mysql_user
PIM_DB_PASSWORD=your_mysql_password
PIM_DB_NAME=your_database_name
PIM_DB_PORT=3306

# JWT Configuration
# CRITICAL: Generate a secure random key for production (e.g., openssl rand -hex 32)
JWT_SECRET=REQUIRED_GENERATE_SECURE_RANDOM_KEY
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (for quote notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=your_email@gmail.com

# Application Settings
DEFAULT_PAGINATION_LIMIT=50
MAX_UPLOAD_SIZE=10MB
LOG_LEVEL=info